<resources>
    <!-- Base application theme. -->
    <style name="Theme.Service" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/grey_basic</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/grey_shadow</item>
        <item name="colorSecondaryVariant">@color/grey_middle</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>

    <style name="BoldLargeTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/philosopher_bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="MediumItalicTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/philosopher_italic</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>
</resources>